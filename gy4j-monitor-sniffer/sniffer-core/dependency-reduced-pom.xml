<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>gy4j-monitor-sniffer</artifactId>
    <groupId>cn.gy4j.monitor</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>sniffer-core</artifactId>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <relocations>
                <relocation>
                  <pattern>${shade.com.lmax.source}</pattern>
                  <shadedPattern>${shade.com.lmax.target}</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>${shade.com.google.source}</pattern>
                  <shadedPattern>${shade.com.google.target}</shadedPattern>
                </relocation>
              </relocations>
              <transformers>
                <transformer />
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <shade.com.lmax.source>com.lmax</shade.com.lmax.source>
    <shade.com.lmax.target>${shade.package}.${shade.com.lmax.source}</shade.com.lmax.target>
    <gson.version>2.8.5</gson.version>
    <shade.package>cn.gy4j.monitor.dependencies</shade.package>
    <bytebuddy.version>1.8.5</bytebuddy.version>
    <shade.com.google.source>com.google</shade.com.google.source>
    <shade.com.google.target>${shade.package}.${shade.com.google.source}</shade.com.google.target>
    <disruptor.version>3.3.6</disruptor.version>
  </properties>
</project>
